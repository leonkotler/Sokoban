<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import view.GUIDisplayer?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.111"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SokobanGUIController">
    <columnConstraints>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <BorderPane prefHeight="459.0" prefWidth="613.0">
            <center>
                <GUIDisplayer fx:id="displayer" width="400.0" height="360.0" BorderPane.alignment="CENTER"/>


            </center>
            <left>
                <VBox alignment="CENTER" prefHeight="459.0" prefWidth="159.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#openFile" prefHeight="25.0"
                                prefWidth="106.0" text="Load">
                            <VBox.margin>
                                <Insets bottom="20.0" top="20.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="20.0" top="20.0"/>
                            </padding>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#saveFile" prefHeight="25.0"
                                prefWidth="101.0" text="Save">
                            <VBox.margin>
                                <Insets bottom="20.0" top="20.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="20.0" top="20.0"/>
                            </padding>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#exit" prefHeight="25.0"
                                prefWidth="106.0" text="Exit">
                            <VBox.margin>
                                <Insets bottom="20.0" top="20.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="20.0" top="20.0"/>
                            </padding>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button alignment="CENTER" onAction="#solve" mnemonicParsing="false" prefHeight="25.0"
                                prefWidth="101.0" text="Solve">
                            <VBox.margin>
                                <Insets bottom="20.0" top="20.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="20.0" top="20.0"/>
                            </padding>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#playPause" prefHeight="25.0" prefWidth="101.0"
                                text="Mute / Play"/>
                    </children>
                </VBox>
            </left>
            <bottom>
                <Label fx:id="steps" prefHeight="17.0" prefWidth="80.0" BorderPane.alignment="CENTER_RIGHT">
                    <BorderPane.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                </Label>
            </bottom>
        </BorderPane>
    </children>
</GridPane>
